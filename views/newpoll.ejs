<!DOCTYPE html>
<html>
	<head>
		 <% include ./partials/head %>
	</head>

	<header>
		<% include ./partials/header %>
	</header>
<!----------------------------------------------------------------------------->
<body>
  <div class="container">
    <form class="form-horizontal" role="form" method="POST" action="/newPoll">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <h2>Create a new Poll</h2>
          <hr>
        </div>
      </div><!-- close row -->
      <div class="row">
        <div class="col-md-3 field-label-responsive">
          <label for="name">Title</label>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
              <input type="text" name="title" class="form-control" id="title" placeholder="Who is your favorite Superhero?" required autofocus>
            </div>
          </div>
        </div>
      </div><!-- close row -->
      <div class="row">
        <div class="col-md-3 field-label-responsive">
          <label for="email">Options (seperated by comma)</label>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
              <textarea class="form-control" name="options" id="options" rows="5" placeholder="Superman, Spiderman, Batman" required autofocus></textarea>
            </div>
          </div>
        </div>
      </div><!-- close row -->
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <button type="submit" class="btn btn-success">Create!</button>
        </div>
      </div>
    </form>
  </div>
  <% include ./partials/body-partial %>
</body>
<footer>
  <% include ./partials/footer %>
</footer>
</html>
